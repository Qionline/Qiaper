{
  "manifest_version": 3,
  "name": "Qiaper",
  "description": "集接口抓取/生成、请求Mock为一体的生产力Chrome拓展",
  "version": "1.0",
  "permissions": [
    "background",
    "tabs",
    "storage"
  ],
  "icons": {
    "256": "logo.png"
  },
  "action": {
    "default_title": "Qiaper",
    "default_popup": "index.html"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "./contentScripts/index.js"
      ],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "contentScripts/intercept.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}